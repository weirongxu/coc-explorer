{
  "compilerOptions": {
    "outDir": "lib",
    "module": "ESNext",
    "lib": ["ES6", "ES2019.Object", "ES2017.Object"],
    "isolatedModules": true,
    "target": "ES2017",
    "declaration": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["."],
  "exclude": ["./tests/**"]
}
